//CONFIG Small Multi Line Chart
const config = {
  type: 'line',
  data: data,
  options: {
    plugins: {
      legend: {
        position: 'bottom',
        labels: {
          usePointStyle: true,
        },
      },
    },
    scales: {
      x: {
        ticks: {
          display: false,
          color: '#94989F', // changes x-axis label (text) color
        },
        grid: {
          display: false,
          color: '#EAEBEC',      // changes grid line color
          borderColor: '#EAEBEC' // changes the axis line color
        },
      },
      y: {
        suggestedMin: 50,
        suggestedMax: 80,
        ticks: {
          display: false,
          color: '#94989F', // changes y-axis label (text) color
          stepSize: 15,
        },
        grid: {
          display: false,
          color: '#EAEBEC',      // changes grid line color
          borderColor: '#EAEBEC' // changes the axis line color
        },
      },
    },
  },
};



