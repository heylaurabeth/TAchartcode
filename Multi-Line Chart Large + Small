//SETUP Large Multi Line Chart
const labels = ['Mar 18', 'Mar 19', 'Mar 20', 'Mar 21', 'Mar 22'];

const data = {
  labels: labels,
  datasets: [
    {
      label: '1st Dataset',
      data: [65, 59, 69, 70, 79],
      borderColor: '#8741E2',          // purple line
      tension: 0.3,                     // smooth curve
      pointBackgroundColor: '#8741E2', // blue dots
      pointBorderColor: '#ffffff',
      pointBorderWidth: 5,
      borderWidth: 8,
      pointRadius: 11,
      pointHoverRadius: 11,
      pointHitRadius: 12,
    },
    {
      label: '2nd Dataset',
      data: [45, 25, 60, 40, 72, 60, 75],
      borderColor: '#B589ED',          // purple line
